model OperDagRapport {
  /// @DtoCreateOptional
  /// @DtoUpdateOptional
  /// @description Het unieke ID van een dagrapport
  ID Int @id @default(autoincrement())

  /// @description Datum van het dagrapport
  DATUM DateTime   @db.Date

  /// @DtoRelationCanConnectOnCreate
  /// @DtoReadOnly
  Veld RefType @relation("Veld", fields: [VELD_ID], references: [ID], onUpdate: Cascade, onDelete: NoAction)

  /// @DtoRelationIncludeId
  /// @DtoCreateOptional
  /// @DtoUpdateOptional
  /// @description Referentie naar het veld in de type tabel
  VELD_ID Int

  RefLid RefLid? @relation("RefLid", fields: [INGEVOERD_ID], references: [ID], onUpdate: Cascade, onDelete: NoAction)

  /// @description Verwijzing naar het lid ID van de persoon die gewerkt heeft, link naar de leden tabel
  /// @DtoRelationIncludeId
  /// @DtoCreateOptional
  /// @DtoUpdateOptional
  INGEVOERD_ID Int @db.Int

  /// @description Beschrijving van de incidenten
  /// @DtoCreateOptional
  /// @DtoUpdateOptional
  INCIDENTEN String?          @db.Text

  /// @description Weersinformatie
  /// @DtoCreateOptional
  /// @DtoUpdateOptional
  METEO String?               @db.Text

  /// @description Diegene die dienst hebben gedaan, startleider, DDI, lierist etc
  /// @DtoCreateOptional
  /// @DtoUpdateOptional
  DIENSTEN String?            @db.Text

  /// @description Algemeen verslag van het vliegbedrijf
  /// @DtoCreateOptional
  /// @DtoUpdateOptional
  VERSLAG String?             @db.Text

  /// @description Bijzonderheden over rollend materieel
  /// @DtoCreateOptional
  /// @DtoUpdateOptional
  ROLLENDMATERIEEL String?    @db.Text

  /// @description Bijzonderheden over de vliegtuigen
  /// @DtoCreateOptional
  /// @DtoUpdateOptional
  VLIEGENDMATERIEEL String?   @db.Text

  /// @DtoReadOnly
  /// @description Is het dagrapport gemarkeerd als verwijderd
  VERWIJDERD Boolean @default(false)

  /// @DtoReadOnly
  /// @description Laatste aanpassingstijd van het winterwerk-item
  LAATSTE_AANPASSING DateTime @updatedAt

  @@index([DATUM], name: "DATUM")
  @@map("oper_dagrapporten")
}
